<h1>Robots#show</h1>
<p>Find me in app/views/robots/show.html.erb</p>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @robot.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @robot.description %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @robot.price %>
</p>

<p>
  <strong>Image:</strong>
  <% if @robot.image.attached?%>
  <%= image_tag(@robot.image) %>
  <% else %>
    <strong>No image provided</strong>
  <% end %>
</p>

<% if @robot.user != current_user && user_signed_in? %>
<button type="button" id="checkout-button">Buy</button>
<% end %>

<% if @robot.user == current_user %>
  <%= link_to 'Edit', edit_robot_path(@robot) %> |
  <%= link_to 'Delete', @robot, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', robots_path %>

<script type="text/javascript">
    // Create an instance of the Stripe object with your publishable API key
    var stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :public_key) %>");
    var checkoutButton = document.getElementById("checkout-button");
    checkoutButton.addEventListener("click", function () {
      fetch("/transactions", {
        method: "POST",
       headers: {
       'Content-Type': 'application/x-www-form-urlencoded'
     },
     body: "id=<%= @robot.id %>"
      })
        .then(function (response) {
          return response.json();
        })
        .then(function (session) {
          return stripe.redirectToCheckout({ sessionId: session.id });
        })
        .then(function (result) {
          // If redirectToCheckout fails due to a browser or network
          // error, you should display the localized error message to your
          // customer using error.message.
          if (result.error) {
            alert(result.error.message);
          }
        })
        .catch(function (error) {
          console.error("Error:", error);
        });
    });
  </script>
